<h1>News</h1>
<div id="articles">
    <form action="/scrape" method="GET">
        <button type="submit">Get Latest News</button>
        <button type="submit" formaction="/saved">View Saved Articles</button>
    </form>
    {{#each articles}}
        {{#unless this.saved}}
            <div class="articles">

                <div class="innerArticle">
                    {{this.title}}<br>
                    <a href={{this.link}}>Read Article</a><br>
                </div>
                <div class="buttons">
                    <form method="get">
                        <button class="save" formaction="/save/{{this._id}}"><span>Save</span></button>
                    </form>
                </div>
            </div>
        {{/unless}}
    {{/each}}

</div>